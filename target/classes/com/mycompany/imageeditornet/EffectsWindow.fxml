<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>


<AnchorPane style="-fx-background-color: orange;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.imageeditornet.EffectsController">
    <children>
        <ImageView fx:id="imageView" fitHeight="400" fitWidth="600" layoutX="20" layoutY="20" pickOnBounds="true" preserveRatio="true" />
        <HBox alignment="CENTER" layoutX="20" layoutY="430" spacing="10">
            <children>
                <Button fx:id="grayscaleButton" mnemonicParsing="false" onAction="#applyGrayscale" style="-fx-background-color: white; -fx-background-radius: 17PX;" text="Grayscale" />
                <Button fx:id="sepiaButton" mnemonicParsing="false" onAction="#applySepia" style="-fx-background-color: White; -fx-background-radius: 17PX;" text="Sepia" />
                <Button fx:id="blurButton" mnemonicParsing="false" onAction="#applyBlur" style="-fx-background-color: white; -fx-background-radius: 17PX;" text="Blur" />
                <Button fx:id="resetButton" mnemonicParsing="false" onAction="#reset" style="-fx-background-color: White; -fx-background-radius: 17PX;" text="Reset" />
                <Button fx:id="saveButton" onAction="#save" style="-fx-background-color: WHITE; -fx-background-radius: 17PX;" text="Save" />

                        </children>
        </HBox>
    </children>
</AnchorPane>
